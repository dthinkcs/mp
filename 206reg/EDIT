DATA SEGMENT
MSG1 DB 'ENTER MAIN STRING $'
NEXT1 DB 10,13,'$'
MSG2 DB 'ENTER SUBSTRING $'
MAX DB 20
LEN DB ?
STRING1 DB 20 DUP('$')
MAX2 DB 10
LEN2 DB ?
STRING2 DB 10 DUP('$')
MSG3 DB 'FOUND$'
MSG4 DB 'NOT FOUND$'
DATA ENDS

PRINT MACRO MSG
LEA DX,MSG
MOV AH,09
INT 21H
ENDM

CODE SEGMENT
ASSUME CS:CODE,DS:DATA
START:
MOV AX,DATA
MOV DS,AX
MOV ES,AX
PRINT MSG1
LEA DX,MAX
MOV AH,0AH
INT 21H
PRINT NEXT1
PRINT MSG2
PRINT NEXT1
LEA DX,MAX2
MOV AH,0AH
INT 21H
PRINT NEXT1
MOV BL,LEN
MOV CL,LEN2
MOV CH,0
MOV BH,0
LEA SI,STRING1
LEA DI,STRING2
BACK:
MOV DX,SI
REPE CMPSB
CMP CX,0
JZ EQUAL
MOV CL,LEN2
MOV CH,0
LEA DI,STRING2
MOV SI,DX
INC SI
DEC BX
JNZ BACK
PRINT NEXT1
PRINT MSG4
PRINT NEXT1
MOV AH,4CH
INT 21H
EQUAL: PRINT NEXT1
PRINT MSG3
PRINT NEXT1
MOV AH,4CH
INT 21H
CODE ENDS
END START
